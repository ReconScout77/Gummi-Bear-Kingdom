@model GummiBearKingdom.Models.Product

@{

  ViewData["Title"] = "Edit Product";
}

<h1 class="text-center"> Edit product: @Html.DisplayFor(model => model.Name)</h1>

@using (@Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.CategoryId)

    <div class="card">
        <div class="card-block">
            <div class="d-flex justify-content-center">
                <label class="p-2">@Html.LabelFor(model => model.Name):</label>
                <div class="p-2">@Html.EditorFor(model => model.Name, new {@class="form-control"})</div>
            </div> 
            <div class="d-flex justify-content-center"> 
                <label class="p-2">@Html.LabelFor(model => model.Cost):</label>
                <div class="p-2"> 
                    @Html.EditorFor(model => model.Cost, new {type="number"})
                </div>
            </div>
		     <div class="d-flex justify-content-center">
                <label class="p-2">@Html.LabelFor(model => model.CountryOfOrigin):</label>
                <div class="p-2">@Html.EditorFor(model => model.CountryOfOrigin, new {@class="form-control"})</div>
            </div> 
            <div class="d-flex justify-content-center">
                <input type="submit" value="Save" class="btn btn-info">
			</div>
        </div> 
    </div> 
}