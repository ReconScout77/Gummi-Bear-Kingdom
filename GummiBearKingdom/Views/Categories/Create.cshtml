@model GummiBearKingdom.Models.Category
@{
    ViewData["Title"] = "Create Category";
    ViewData["PageHead"] = "Add a New Category";
}

@using (Html.BeginForm())
{   
    <div class="card"> 
        <div class="card-block">
            <div class="d-flex justify-content-center"> 
                <label class="p-2">@Html.LabelFor(model => model.Name):</label>        
                <div class="p-2">
                     @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
                </div>
            </div> 
		    <div class="d-flex justify-content-center"> 
                <div class="p-2"><input type="submit" value="Add new category" class="btn btn-primary" /> </div>
			</div>
        </div>
    </div>
}

<p class="back">@Html.ActionLink("Back to Categories", "Index")</p>