@model GummiBearKingdom.Models.Category

@{  
    ViewData["Title"] = "Edit Category";
}

<h1 class="text-center">Edit the category currently known as @Html.DisplayFor(model => model.Name)</h1>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CategoryId)
   

    <div class="card">
        <div class="card-block">
            <div class="d-flex justify-content-center">
                <label class="p-2">@Html.LabelFor(model => model.Name):</label>
                <div class="p-2">
                    @Html.EditorFor(model => model.Name, new {@class="form-control"})
                </div>
            </div>
		    <div class="d-flex justify-content-center">
			    <div class="p-2">
                    <input type="Submit" value="Save" class="btn btn-info" />
				</div>
			</div>
        </div>
    </div>

}

<p class="back">@Html.ActionLink("Back to category list", "Index")</p>
